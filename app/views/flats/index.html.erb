<h1>All Flats</h1>

<%= link_to 'Add New Flat', new_flat_path, class: "btn btn-success" %>

<div class="flats-container">
  <% @flats.each do |flat| %>
    <div class="flat-card">
      <% if flat.picture_url.present? %>
        <img src="<%= flat.picture_url %>" alt="<%= flat.name %>" class="img-fluid rounded">
      <% end %>
      <h2><%= flat.name %></h2>
      <p><strong>Address:</strong> <%= flat.address %></p>
      <p><%= flat.description %></p>
      <p><strong>Price per night:</strong> $<%= flat.price_per_night %></p>
      <p><strong>Guests:</strong> <%= flat.number_of_guests %></p>
      <%= link_to 'View Details', flat_path(flat), class: "btn btn-info" %>
      <%= link_to 'Edit', edit_flat_path(flat), class: "btn btn-warning" %>
      <%= link_to "Delete", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
